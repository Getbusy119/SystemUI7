<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" 
    android:ordering="sequentially">
    <objectAnimator 
        android:propertyName="MusicAlpha"  
        android:duration="160"
	    android:valueFrom="1"  
	    android:valueTo="0"  
	    android:interpolator="@android:anim/linear_interpolator"
	    android:valueType="floatType" />
	<set android:ordering="together">
	    <objectAnimator 
	        android:propertyName="RemoveRotation"
	        android:duration="280"
	        android:valueFrom="0"  
	    	android:valueTo="-24"  
	    	android:interpolator="@android:anim/linear_interpolator"
	    	android:valueType="floatType" />
	    <objectAnimator 
	        android:propertyName="Alpha"
	        android:duration="280"
	        android:valueFrom="1"  
	    	android:valueTo="0"  
	    	android:interpolator="@android:anim/linear_interpolator"
	    	android:valueType="floatType" />
	</set>
	<set android:ordering="together">
	    <objectAnimator 
	        android:propertyName="Alpha"
	        android:duration="500"
	        android:valueFrom="0"  
	    	android:valueTo="1"
	    	android:interpolator="@android:anim/linear_interpolator"
	    	android:valueType="floatType" />
	    <objectAnimator 
	        android:propertyName="AddRotation"
	        android:duration="500"
	        android:valueFrom="0"  
	    	android:valueTo="-30"  
	    	android:interpolator="@android:anim/linear_interpolator"
	    	android:valueType="floatType" />
	</set>
	<objectAnimator 
        android:propertyName="MusicAlpha"  
        android:duration="160"
	    android:valueFrom="0"  
	    android:valueTo="1"  
	    android:interpolator="@android:anim/linear_interpolator"
	    android:valueType="floatType" />
</set>
