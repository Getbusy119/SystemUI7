<com.android.keyguard.KeyguardPINView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:androidprv="http://schemas.android.com/apk/res-auto"
        android:id="@+id/keyguard_pin_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:contentDescription="@string/keyguard_accessibility_pin_unlock"
	android:gravity="center"
        >
    <!--androidprv:layout_maxWidth="@dimen/keyguard_security_width"-->
    <LinearLayout
        android:id="@+id/keyguard_lock_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/itel_keyguard_pin_margintop"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/keyguard_lock_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:src="@drawable/kg_too_many_fail_lock"
            android:visibility="gone" />

	    <include layout="@layout/keyguard_message_area"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />

	    <View
            android:id="@+id/keyguard_head_error_space"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="19dp"
            android:orientation="vertical"
            android:layout_weight="1"
		    android:gravity="center"
            android:layoutDirection="ltr"
            >
        <com.android.keyguard.AlphaOptimizedRelativeLayout
            android:id="@+id/row0"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="16dp"
            >
            <com.android.keyguard.PasswordTextView
                    android:id="@+id/pinEntry"
                    android:layout_width="@dimen/keyguard_security_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
		            android:layout_gravity="center"
                    androidprv:scaledTextSize="18"
                    android:contentDescription="@string/keyguard_accessibility_pin_area"
                    />
		 <!--
            <ImageButton
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_backspace_24dp"
                    android:clickable="true"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    android:paddingRight="8dp"
                    android:paddingLeft="24dp"
                    android:background="@drawable/ripple_drawable"
                    android:contentDescription="@string/keyboardview_keycode_delete"
                    android:layout_alignEnd="@+id/pinEntry"
                    android:layout_alignParentRight="true"
                    />
		      -->
	<!--	      
            <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#28FFFFFF"
                    />
		    -->
        </com.android.keyguard.AlphaOptimizedRelativeLayout>
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="@dimen/keyguard_pin_row_width"
            android:layout_height="@dimen/keyguard_pin_row_height"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <com.android.keyguard.NumPadKey
                android:id="@+id/key1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="1"
                androidprv:usebackground="true"
                />
            <com.android.keyguard.NumPadKey
                android:id="@+id/key2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/keyguard_pin_key_number_margin_left"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="2"
                androidprv:usebackground="true"
                />
            <com.android.keyguard.NumPadKey
                android:id="@+id/key3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/keyguard_pin_key_number_margin_left"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="3"
                androidprv:usebackground="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="@dimen/keyguard_pin_row_width"
            android:layout_height="@dimen/keyguard_pin_row_height"
		    android:gravity="center"
            android:orientation="horizontal">
            <com.android.keyguard.NumPadKey
                android:id="@+id/key4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="4"
                androidprv:usebackground="true"
                />
            <com.android.keyguard.NumPadKey
                android:id="@+id/key5"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/keyguard_pin_key_number_margin_left"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="5"
                androidprv:usebackground="true"
                />
            <com.android.keyguard.NumPadKey
                android:id="@+id/key6"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/keyguard_pin_key_number_margin_left"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="6"
                androidprv:usebackground="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="@dimen/keyguard_pin_row_width"
            android:layout_height="@dimen/keyguard_pin_row_height"
            android:orientation="horizontal"
		    android:gravity="center">
            <com.android.keyguard.NumPadKey
                android:id="@+id/key7"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="7"
                androidprv:usebackground="true"
                />
            <com.android.keyguard.NumPadKey
                android:id="@+id/key8"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/keyguard_pin_key_number_margin_left"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="8"
                androidprv:usebackground="true"
                />
            <com.android.keyguard.NumPadKey
                android:id="@+id/key9"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/keyguard_pin_key_number_margin_left"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="9"
                androidprv:usebackground="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="@dimen/keyguard_pin_row_width"
            android:layout_height="@dimen/keyguard_pin_row_height"
		    android:gravity="center"
            android:orientation="horizontal" >

		<com.android.keyguard.AlphaOptimizedImageButton
                android:id="@+id/delete_button"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/itel_keyguard_pin_key_selector_bg"
                android:contentDescription="@string/keyboardview_keycode_delete"
                android:src="@drawable/itel_keyguard_pin_delete"
                android:paddingBottom="@dimen/keyguard_pin_key_number_padding_bottom" />
            <com.android.keyguard.NumPadKey
                android:id="@+id/key0"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/keyguard_pin_key_number_margin_left"
                androidprv:textView="@+id/pinEntry"
                androidprv:digit="0"
                androidprv:usebackground="true"
                />
            <com.android.keyguard.AlphaOptimizedImageButton
                android:id="@+id/key_enter"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/keyguard_pin_key_number_margin_left"
                android:paddingBottom="@dimen/keyguard_pin_key_number_padding_bottom"
                android:src="@drawable/itel_ic_done_wht_small"
                android:background="@drawable/itel_keyguard_pin_key_selector_bg"
                android:contentDescription="@string/keyboardview_keycode_enter"
                />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/keyguard_eca"
        android:id="@+id/keyguard_selector_fade_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="@dimen/keyguard_pin_emergency_top"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_horizontal"/>

</com.android.keyguard.KeyguardPINView>
